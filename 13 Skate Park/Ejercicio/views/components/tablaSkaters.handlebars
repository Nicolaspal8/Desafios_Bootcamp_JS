        <tbody>
            {{#each skaters}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td><img src="/public/img/{{this.foto}}" alt="foto-skater-{{this.nombre}}"></td>
                    <td>{{this.nombre}}</td>
                    <td>{{this.anos_experiencia}}</td>
                    <td>{{this.especialidad}}</td>
                    <td>
                      <input value="{{this.id}}" class="check"
                      {{#if ../admin}}
                        onclick="cambiarEstado({{this.id}}, this)"
